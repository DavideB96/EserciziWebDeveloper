function valore() {
  var risposta1 = document.getElementById("domanda1").value;
  var risposta2 = document.getElementById("domanda2").value;
  var risposta3 = document.getElementById("domanda3").value;
  var risposta4 = document.getElementById("domanda4").value;
  var risposta5 = document.getElementById("domanda5").value;

  var risultatoFinale = "";

  if (risposta1 == "") {
    risultatoFinale += "Domanda 1 non compilata<br>";
  } else {
    risultatoFinale += "1. Hai risposto: " + risposta1 + "<br>";
  }

  if (risposta2 == "") {
    risultatoFinale += "Domanda 2 non compilata<br>";
  } else {
    risultatoFinale += "2. Hai risposto: " + risposta2 + "<br>";
  }

  if (risposta3 == "") {
    risultatoFinale += "Domanda 3 non compilata<br>"; 
  } else {
    risultatoFinale += "3. Hai risposto: " + risposta3 + "<br>";
  }

    if (risposta4 == "") {
    risultatoFinale += "Domanda 4 non compilata<br>";
  } else {
    risultatoFinale += "4. Hai risposto: " + risposta4 + "<br>";
  }

      if (risposta5 == "") {
    risultatoFinale += "Domanda 5 non compilata<br>";
  } else {
    risultatoFinale += "5. Hai risposto: " + risposta5 + "<br>";
  }

  document.getElementById("risultato").innerHTML = risultatoFinale;
}
